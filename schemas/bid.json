{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bid",
  "description": "Brand Agent bid submitted in response to a ContextRequest",
  "type": "object",
  "required": [
    "bid_id",
    "brand_agent_id",
    "context_id",
    "wallet_id",
    "pricing",
    "offer",
    "timestamp",
    "auth"
  ],
  "properties": {
    "bid_id": {
      "type": "string",
      "description": "Unique identifier for this bid",
      "example": "bid_7823"
    },
    "brand_agent_id": {
      "type": "string",
      "description": "Identifier of the brand agent placing the bid",
      "example": "brand_agent_123"
    },
    "context_id": {
      "type": "string",
      "description": "ID of the ContextRequest being bid on",
      "example": "ctx_92f"
    },
    "wallet_id": {
      "type": "string",
      "description": "Wallet to debit if the bid wins",
      "example": "wallet_890"
    },
    "pricing": {
      "type": "object",
      "description": "Pricing vector for different billing events (CPX required, CPC/CPA optional)",
      "required": ["cpx"],
      "properties": {
        "cpx": {
          "type": "string",
          "description": "Price per exposure (USD)",
          "pattern": "^\\d+\\.\\d{2,}$",
          "example": "0.05"
        },
        "cpc": {
          "type": "string",
          "description": "Price per click (USD)",
          "pattern": "^\\d+\\.\\d{2,}$",
          "example": "0.45"
        },
        "cpa": {
          "type": "string",
          "description": "Price per conversion (USD)",
          "pattern": "^\\d+\\.\\d{2,}$",
          "example": "10.00"
        },
        "currency": {
          "type": "string",
          "description": "Currency code (ISO 4217)",
          "pattern": "^[A-Z]{3}$",
          "default": "USD",
          "example": "USD"
        },
        "preferred_pricing_model": {
          "type": "string",
          "description": "Preferred pricing model for billing (CPX, CPC, or CPA)",
          "enum": ["CPX", "CPC", "CPA"],
          "example": "CPA"
        }
      },
      "additionalProperties": false
    },
    "offer": {
      "type": "object",
      "description": "Offer metadata that will be rendered to the user if the bid wins",
      "required": ["creative_input"],
      "properties": {
        "creative_input": {
          "$ref": "./creative-input.json"
        }
      },
      "additionalProperties": false
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the bid was generated",
      "example": "2025-11-11T18:00:01Z"
    },
    "auth": {
      "type": "object",
      "description": "Authentication envelope used for replay protection",
      "required": ["nonce", "signature"],
      "properties": {
        "nonce": {
          "type": "string",
          "description": "One-time nonce for replay protection",
          "example": "nonce_456"
        },
        "signature": {
          "type": "string",
          "description": "Signature over the canonical bid payload",
          "example": "sig_789"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "$ref": "./common.json#/definitions/extensionNamespace",
      "description": "Optional vendor-namespaced metadata"
    },
    "processing_latency_ms": {
      "type": "integer",
      "description": "Round-trip latency from auction request receipt to bid submission (milliseconds). Used by operator to track brand agent response times.",
      "minimum": 0,
      "example": 42
    }
  },
  "examples": [
    {
      "bid_id": "bid_7823",
      "brand_agent_id": "brand_agent_123",
      "context_id": "ctx_92f",
      "wallet_id": "wallet_890",
      "pricing": {
        "cpx": "0.05",
        "cpc": "0.45",
        "cpa": "10.00",
        "currency": "USD",
        "preferred_pricing_model": "CPA"
      },
      "offer": {
        "creative_input": {
          "brand_name": "Nimbus",
          "product_name": "Nimbus CRM Pro",
          "short_description": "CRM built for growing teams, with AI-assisted workflows.",
          "long_description": "Nimbus CRM Pro is designed for teams of 5-50 people who need intelligent pipeline management. It includes automated follow-ups, collaborative forecasting, and embedded AI copilots that help close deals faster.",
          "value_props": ["Automated follow-ups", "Embedded copilots"],
          "context_snippet": "For startups needing higher limits and automated expense workflows.",
          "cta_label": "Start Free Trial",
          "cta_url": "https://nimbus.example.com/signup",
          "assets": {
            "logo_url": "https://cdn.example.com/nimbus/logo.png",
            "image_urls": ["https://cdn.example.com/nimbus/crm.png"],
            "resource_urls": ["https://nimbus.example.com/signup"]
          }
        }
      },
      "timestamp": "2025-11-11T18:00:01Z",
      "auth": {
        "nonce": "nonce_456",
        "signature": "sig_789"
      },
      "processing_latency_ms": 42
    }
  ],
  "$id": "https://aip.org/schemas/bid.json"
}
