{
  "$id": "https://aip.org/schemas/common.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIP Common Types",
  "type": "object",
  "properties": {
    "aipVersion": { "type": "string", "const": "0.1" },
    "id": { "type": "string", "minLength": 3, "maxLength": 128 },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
    "money": {
      "oneOf": [
        { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,4})?$" },
        { "type": "integer", "minimum": 0 }
      ],
      "description": "decimal string up to 4 dp or integer cents"
    },
    "nonce": { "type": "string", "minLength": 8, "maxLength": 64 },
    "signature": { "type": "string", "minLength": 16 }
  },
  "additionalProperties": false,
  "definitions": {
    "extensionNamespace": {
      "title": "Extension Namespace",
      "description": "Vendor-specific extension container keyed by unique vendor IDs.",
      "type": "object",
      "patternProperties": {
        "^[a-z0-9][a-z0-9_-]{1,63}$": {
          "type": "object",
          "description": "Custom fields owned by the vendor namespace.",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  }
}
